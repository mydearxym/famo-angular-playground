@import '../common/variables'

/****************************************************************
* Body / html
****************************************************************/

.homepage-app
  height 100%
  width 100%
  overflow hidden
  background #0c090d

body
  -webkit-font-smoothing: antialiased
  font-family 'AvenirNextLTW02-Regular', 'sans-serif'; 

.fill-width
  width: 100%

/****************************************************************
* General mobile
****************************************************************/

@media (max-width: 769px)
  h1
    font-size: 28px


/****************************************************************
* Main content area
****************************************************************/

.main-content
  padding: 48px

@media (max-width: 769px)
  .main-content
    padding: 20px 15px

/****************************************************************
* Utility classes
****************************************************************/

// For getting sidebar to expand 100% of height
.fill
  height: 100%

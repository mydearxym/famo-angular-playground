@import '../common/variables'

/****************************************************************
* Main header navbar
****************************************************************/

#nav-bar
  //font-family 'Raleway'
  position fixed
  width 100%
  height 100px
  top 0px
  left 0px
  background-color #333
  color white
  overflow hidden
  box-shadow 0px 2px 0px 0px $box-shadow-color
  z-index 3

  a
    text-decoration none
    color inherit

    &:hover
      text-decoration underline

  a.nav-bar-item
    display inline-block
    vertical-align middle
    line-height 100px
    padding 20px
    height 100%
    line-height 60px
    font-size 16px
    font-weight normal

    img
      vertical-align middle

  a.download
    box-sizing border-box
    position absolute
    width 120px
    margin 25px 20px
    line-height 30px
    right 0px
    vertical-align middle
    text-align center
    border none
    font-size 16px
    font-weight normal
    color white
    background-color $primary-color
    padding 10px
    border-radius 5px

@import '../common/variables'

/***********************************************************************
  State 2
***********************************************************************/

.state-2

  .nametag
    backface-visibility visible !important

  .clip-overflow
    overflow hidden

  .nametag-body
    position absolute
    background #FD971F
    width 100%
    height 100%
    border-radius 10px

  .nametag-heading
    text-align center

    .hello
      font-family Lato
      font-weight bold
      font-size 64px
      line-height 60px
      letter-spacing 6.6px
      color #FFFFFF

    .intro
      font-family Lato
      font-weight bold
      font-size 24px
      line-height 41px
      letter-spacing 0.96px
      color #FFFFFF

  .nametag-stripe
    position absolute
    background white
    width 100%
    height 100%

  .nametag-name
    text-align center
    font-family 'Covered By Your Grace';
    font-size 220px
    color black
    white-space nowrap

  .input-name
    border 0
    border-radius 5px
    font-family Lato
    font-weight bold
    font-size 30px
    line-height 60px
    padding 0 22px
    width 100%
    height 70px

    &:focus
      outline-width 0

  .input-animation-container
    background white
    border-radius 5px
    width 100%
    height 70px
    padding 30px 20px

  .input-animation
    border 0
    margin auto
    height 15px
    width 80%

    &:focus
      outline-width 0

  .input-label
    padding-top 10px
    font-family Lato
    font-size 18px
    color white
    text-transform uppercase

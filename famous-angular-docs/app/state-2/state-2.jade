fa-view(ts-sheet='State2Sheet')
  fa-modifier(
    fa-translate='gravity.translate(gravityTimeline.get())'
    fa-opacity='gravity.opacity(gravityTimeline.get())'
  )
    fa-modifier(
      fa-translate='entireView.translate(t.get())'
      fa-opacity='entireView.opacity(t.get())'
    )
      fa-modifier(id='left-column')
        fa-modifier(
          fa-size='[620, 375]'
          fa-opacity='entireCard.opacity(t.get())'
          fa-translate='entireCard.translate(t.get())'
          fa-align='[0, 0]'
        )
          fa-modifier(
            fa-translate='entireCard.animation.translate(data.t)'
          )
            fa-modifier(
              fa-rotate-y='entireCard.animation.rotate(data.t)'
              fa-scale='entireCard.animation.scale(data.t)'
              fa-origin='[0.5, 1]'
              fa-align='[0.5, 1]'
            )
              fa-modifier(fa-translate='nametag.body.translate(data.t)')
                fa-surface(
                  fa-size='[620, 375]'
                ).nametag-body.nametag
                  
              fa-modifier(fa-translate='nametag.heading.translate(data.t)')
                fa-surface(
                  fa-size='[620, true]'
                ).nametag-heading.nametag
                  .hello
                    | HELLO
                  .intro
                    | my name is

              fa-modifier(fa-translate='nametag.stripe.translate(data.t)')
                fa-surface(
                  fa-size='[620, 210]'
                ).nametag-stripe.nametag
                  
              fa-modifier(fa-translate='nametag.name.translate(data.t)')
                fa-surface(
                  fa-size='[620, true]'
                ).clip-overflow.nametag-name.nametag
                  | {{data.name}}

        fa-modifier(
          ng-if='isDesktop()'
          fa-translate='nametag.inputText.translate(t.get())'
          fa-opacity='nametag.inputText.opacity(t.get())'
        )
          fa-surface(
            fa-size='[300, true]'
          )
            input(type='text' ng-model='data.name').input-name
            div.input-label
              | text input
        fa-modifier(
          fa-translate='nametag.inputRange.translate(t.get())'
          fa-opacity='nametag.inputRange.opacity(t.get())'
        )
          fa-surface(
            fa-size='[isDesktop() ? 300 : 615, true]'
          )
            div.input-animation-container
              input(type='range' min="1" ng-model='data.t').input-animation
            div.input-label.hidden-xs
              | Animation


      fa-modifier(id='right-column')
        fa-modifier(
          fa-translate='heading.translate(t.get())'
          fa-opacity='heading.opacity(t.get())'
        )
          fa-surface(fa-size="[750, true]")
            h1.heading Combine data binding with Famo.us surfaces and modifiers 

        fa-modifier(id='code')
          fa-surface(fa-size="[700, true]").code
            pre
              code.
                &lt;<span class="tag">fa-modifier</span> <span class="attr-name">fa-scale</span>=<span class="attr-value">"card.scale(data.t)"</span>&gt;
                   &lt;<span class="tag">fa-surface</span>&gt;
                     ...
                   &lt;/<span class="tag">fa-surface</span>&gt;
                &lt;/<span class="tag">fa-modifier</span>&gt;

                &lt;<span class="tag">fa-surface</span>&gt;
                  &lt;<span class="tag">input</span> <span class="attr-name">type</span>=<span class="attr-value">"range"</span> <span class="attr-name">ng-model</span>=<span class="attr-value">"data.t"</span>&gt;
                  &lt;<span class="tag">input</span> <span class="attr-name">type</span>=<span class="attr-value">"text"</span> <span class="attr-name">ng-model</span>=<span class="attr-value">"data.name"</span>&gt;
                &lt;/<span class="tag">fa-surface</span>&gt;


@import '../common/variables'

/***********************************************************************
  Download Panel
***********************************************************************/

#viewport

  .download-container
    position absolute
    height 500px
    width 1400px
    border-radius 10px
    border 2px solid #5C4554

    .download-container-divider
      position absolute
      height 100%
      width 1px
      border-right 2px solid #5C4554
      left 34%
      top 0

    .starter-kit
      position absolute
      left 85px
      top 40px

    .cdn
      position absolute
      left 535px
      top 40px

      .cdn-option
        margin-bottom 20px

        .icons
          margin-bottom 20px

          .pill-button
            display inline-block
            vertical-align middle
            background white
            border-radius 10px
            padding 8px 13px
            font-size 22px
            letter-spacing 1.2px
            text-transform uppercase
            color black


          .minify-option
            cursor pointer
            display inline-block
            vertical-align middle
             
            .circle
              vertical-align middle
              display inline-block
              border-radius 999px
              border 3px solid inherit
              height 40px
              width 40px
              margin-left 50px
              font-size 30px

              &.octicon
                padding-top 2px
                background black
                border-color gray
                color black
                text-align center
                transition border-color 0.2s ease, background 0.2s ease

            .option-label
              margin-left 20px
              font-weight 400
              vertical-align middle
              display inline-block
              color gray
              font-size 30px
              transition color 0.2s ease

            &.active
              .circle
                &.octicon
                  border-color #AE81FF
                  background #AE81FF
                  transition border-color 0.2s ease, background 0.2s ease

              .option-label
                color #AE81FF
                transition color 0.2s ease

        .info
          font-size 26px
          color white

          .line
            margin-bottom 5px

          .required
            text-transform uppercase
            letter-spacing 1.2px
            color #F92672

  .download-text
    color #AE81FF
    font-family Lato
    font-size 26px

  .horizontal-divider
    height 1px
    width 100px
    border-bottom 2px solid #5C4554
    margin-top 30px
    margin-bottom 40px

    &.center
      margin-left auto
      margin-right auto

  .download-button
    display block
    margin auto
    background white
    border-radius 10px
    height 225px
    width 225px
    text-align center
    padding-top 50px
    color black
    transition color 0.2s ease

    &:hover
      color #10a0e6 
      transition color 0.2s ease

    .octicon
      font-size 110px


@media (max-width: 767px) 

  #viewport
    .download-container
      height 600px
      width 720px

      .cdn
        left 30px

      .download-container-divider
        display none
